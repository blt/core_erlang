build-type:          Simple
cabal-version:       >=1.10

library
  default-language: Haskell2010
  exposed-modules:
    Language.Erlang.Core,
    Language.Erlang.AST,
    Language.Erlang.Parser,
    Language.Erlang.Lexer
  build-depends:
    base ==4.6.*,
    transformers ==0.3.*,
    -- lens ==3.10.*
    -- text == 1.0.*,
    parsec ==3.1.*,
    pretty ==1.1.*
  default-extensions: RankNTypes
  ghc-options:
    -Wall -funbox-strict-fields -O2 -fwarn-tabs

test-suite tests
  default-language: Haskell2010
  type:           exitcode-stdio-1.0
  hs-source-dirs: tests
  main-is:        Main.hs

  ghc-options: -Wall -fno-warn-orphans -threaded -rtsopts -with-rtsopts=-N

  build-depends:
    base >= 4 && < 5,
    core-erl,
    QuickCheck >= 2.4,
    HUnit >= 1.2 && <2,
    test-framework >= 0.4,
    test-framework-quickcheck2 >= 0.2,
    test-framework-hunit >=0.2
